<div class="row">
	<div class="span6 offset3">
		<%= simple_form_for(@user, html: {class: 'form-vertical'}) do |f| %>
		  <%= f.input :name %>
		  <%= f.input :email %>
		  <%= f.input :password %>
		  <%= f.input :password_confirmation %>
		  
		  <%= f.button :submit, class: 'btn btn-large btn-primary' %>
		<% end %>
	</div>
</div>
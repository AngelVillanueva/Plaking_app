<table class="table table-striped table-condensed table-bordered">
  <thead>
    <tr>
      <th>Id</th><th>Tax</th><th>Percentage</th>
    </tr>
 </thead>
 <tbody>
	 <% @taxes.each do |tax| %>
	   <tr>
	     <td><%= tax.id %></td>
       <td><%= tax.symbol %></td>
       <td><%= tax.percentage %></td>
       <td>
         <%= link_to "Edit", edit_tax_path(tax), class: "btn btn-info" %>
         <%= link_to "Delete", tax, method: "delete", confirm: "Are you sure?", class: "btn btn-danger" %>
       </td>
	   </tr>
	 <% end %>
 </tbody>
</table>
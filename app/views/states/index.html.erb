<% provide :title, "Admin List of States" %>

<h1>States Admin Area</h1>

<p><%= link_to "New State", new_state_path, class: "btn btn-primary" %></p>

<%= will_paginate %>

<table class="table table-striped table-condensed table-bordered">
  <thead>
    <tr>
      <th>Id</th><th>State</th><th>CP</th><th>Covered</th><th>Requests</th><th>Action</th>
    </tr>
 </thead>
 <tbody>
	 <% @states.each do |state| %>
	   <tr>
	     <td><%= state.id %></td>
       <td><%= state.name %></td>
       <td><%= state.cp_prefix %></td>
       <td><%= link_to state.covered.to_s, edit_state_path(state), class: "btn" %></td>
       <td><%= state.requests %></td>
       <td>
         <%= link_to "Edit", edit_state_path(state), class: "btn btn-info" %>
         <%= link_to "Delete", state, method: "delete", confirm: "Are you sure?", class: "btn btn-danger" %>
       </td>
	   </tr>
	 <% end %>
 </tbody>
</table>

<%= will_paginate %>
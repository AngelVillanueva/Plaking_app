<h1>States Admin Area</h1>

<p><%= link_to "New State", new_state_path, class: "btn btn-primary" %></p>

<%= will_paginate %>

<table class="table table-striped table-condensed table-bordered">
  <thead>
    <tr>
      <th>State</th><th>Covered</th><th>Action</th>
    </tr>
 </thead>
 <tbody>
	 <% @states.each do |s| %>
	   <tr>
       <td><%= s.name %></td>
       <td><%= link_to s.covered.to_s, edit_state_path(s), class: "btn btn-warning" %></td>
       <td><%= link_to "Delete", 'states/delete', method: "delete", class: "btn btn-danger" %></td>
	   </tr>
	 <% end %>
 </tbody>
</table>

<%= will_paginate %>